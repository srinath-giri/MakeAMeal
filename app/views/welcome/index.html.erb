<div style="text-align: center  ">
  <div>
    <table>
      <tr>
        <td><%= link_to image_tag("Pizza.jpg", :width => 300, :height => 150), pizzas_path %></td>
        <td><%= link_to image_tag("Pasta.jpg", :width => 300, :height => 150), pastas_path %></td>
        <td width="40"></td>
        <td id="review1" style="background-color: bisque; text-align: center;" onmouseover="getReview('1')">
          <%= link_to image_tag("Burrp.jpg", :width => 300, :height => 150), reviews_path %>
        </td>
      </tr>
      <tr>
        <td><%= link_to image_tag("Burger.jpg", :width => 300, :height => 150), burgers_path %></td>
        <td><%= link_to image_tag("Noodles.jpg", :width => 300, :height => 150), noodles_path %></td>
        <td width="40"></td>
        <td id="review2" style="background-color: bisque; text-align: center;" onmouseover="getReview('2')">
          <%= link_to image_tag("Yelp.jpg", :width => 300, :height => 150) %>
        </td>
      </tr>
    </table>
  </div>
</div>
<script>
  function getReview(review_no) {
      if(window.XMLHttpRequest) {
          reviewRequest = new XMLHttpRequest();
      }
      reviewRequest.onreadystatechange = function() {
          if(reviewRequest.readyState == 4 && reviewRequest.status == 200)
            document.getElementById("review"+review_no).innerHTML = "<p style =\"font-size: 40px\">" + reviewRequest.responseText  + "</p>";
      }
      reviewRequest.open("GET", "welcome/reviews/"+review_no+".xml", false);
      reviewRequest.send();
  }



</script>

